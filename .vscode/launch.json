        "version": "0.2.0",
        "configurations": [
                {
                        "name": "SSQ API Server",
                        "type": "debugpy",
                        "request": "launch",
                        "module": "uvicorn",
                        "args": [
                                "server.app:app",
                                "--reload",
                                "--host",
                                "0.0.0.0",
                                "--port",
                                "8000"
                        ],
                        "jinja": true,
                        "env": {
                                "APP_ENVIRONMENT": "local"
                        }
                },
                {
                        "name": "Ruff Codebase Formatter",
                        "type": "debugpy",
                        "module": "ruff",
                        "request": "launch",
                        "args": [
                                "format",
                                "."
                        ]
                },
                {
                        "name": "Ruff Linter Checker",
                        "type": "debugpy",
                        "module": "ruff",
                        "request": "launch",
                        "args": [
                                "check",
                                "."
                        ]
                },
                {
                        "name": "Run Unit Tests (Docker)",
                        "type": "node-terminal",
                        "request": "launch",
                        "command": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit; docker-compose -f docker-compose.test.yml down",
                        "cwd": "${workspaceFolder}"
                },
                {
                        "name": "Check Test Coverage (100%)",
                        "type": "debugpy",
                        "module": "pytest",
                        "request": "launch",
                        "args": [
                                "tests/",
                                "--cov-fail-under=100"
                        ],
                        "console": "integratedTerminal",
                        "justMyCode": false
                }
        ]
}