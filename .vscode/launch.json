{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start All Services (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "docker-restart-dev"
        },
        {
            "name": "Debug API Server (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "docker-wait-for-debugpy"
        },
        {
            "name": "Debug Worker (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "docker-wait-for-debugpy"
        },
        {
            "name": "Run Unit Tests (Docker)",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit; docker compose -f docker-compose.test.yml down",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug All Services (API + Worker)",
            "configurations": [
                "Debug API Server (Docker)",
                "Debug Worker (Docker)"
            ],
            "preLaunchTask": "docker-restart-dev",
            "stopAll": true
        }
    ]
}
