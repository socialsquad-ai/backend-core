{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests in Docker",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit; docker compose -f docker-compose.test.yml down",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Start Postgres",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose up postgres",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Start API Server",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "start-api"
        },
        {
            "name": "Start Worker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "start-worker"
        },
        {
            "name": "Start All Services",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "start-all-services"
        }
    ]
}
