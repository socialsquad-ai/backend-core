{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-api",
            "type": "shell",
            "command": "docker compose up -d --build api && echo 'Waiting for API...' && until nc -z 127.0.0.1 5678 2>/dev/null; do sleep 1; done && echo 'API ready!'",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "start-worker",
            "type": "shell",
            "command": "docker compose up -d --build worker && echo 'Waiting for Worker...' && until nc -z 127.0.0.1 5679 2>/dev/null; do sleep 1; done && echo 'Worker ready!'",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "start-all-services",
            "type": "shell",
            "command": "docker compose down && docker compose up -d --build && echo 'Waiting for services...' && sleep 8 && echo 'All services ready!'",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "docker-stop",
            "type": "shell",
            "command": "docker compose down",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "docker-clean",
            "type": "shell",
            "command": "docker compose down -v --remove-orphans && docker system prune -f",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Unit Tests (Docker)",
            "type": "shell",
            "command": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit; docker compose -f docker-compose.test.yml down",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Ruff Format",
            "type": "shell",
            "command": "ruff format .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Ruff Check",
            "type": "shell",
            "command": "ruff check .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": []
        }
    ]
}
