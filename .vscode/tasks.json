{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Unit Tests (Docker)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit; docker-compose -f docker-compose.test.yml down",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run unit tests in Docker and cleanup containers"
        },
        {
            "label": "Run Unit Tests (Local)",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest tests/",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run unit tests locally without Docker (uses pytest.ini config)"
        },
        {
            "label": "Run Tests with Coverage (Local)",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest tests/",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run unit tests with coverage report (uses pytest.ini config)"
        },
        {
            "label": "Run Tests with Coverage Report (Docker)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit && open htmlcov/index.html; docker-compose -f docker-compose.test.yml down",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run tests in Docker and open coverage report"
        },
        {
            "label": "Check Test Coverage Percentage",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest tests/",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Check if test coverage meets 100% requirement (uses pytest.ini config)"
        },
        {
            "label": "Generate Coverage Report (HTML)",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest tests/ && open htmlcov/index.html",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Generate and open HTML coverage report (uses pytest.ini config)"
        },
        {
            "label": "Stop and Remove Test Containers",
            "type": "shell",
            "command": "docker-compose -f docker-compose.test.yml down -v",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Stop and remove all test containers and volumes"
        },
        {
            "label": "Clean Test Artifacts",
            "type": "shell",
            "command": "rm -rf .pytest_cache htmlcov coverage.xml .coverage && echo 'Test artifacts cleaned'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Remove all test cache and coverage files"
        },
        {
            "label": "Run Specific Test File",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest ${file}",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run currently open test file (uses pytest.ini config)"
        },
        {
            "label": "Ruff Format Code",
            "type": "shell",
            "command": "ruff format .",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "detail": "Format codebase with Ruff"
        },
        {
            "label": "Ruff Check Code",
            "type": "shell",
            "command": "ruff check .",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "detail": "Lint codebase with Ruff"
        }
    ]
}
