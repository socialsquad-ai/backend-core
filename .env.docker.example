# Docker Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
SSQ_DB_NAME=ssq_db
SSQ_DB_USER=postgres
SSQ_DB_PASSWORD=postgres
SSQ_DB_HOST=postgres
SSQ_DB_PORT=5432

# ===========================================
# Application Settings
# ===========================================
APP_ENVIRONMENT=local
DEBUG=True

# ===========================================
# Auth0 Configuration
# ===========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_ISSUER=https://your-tenant.auth0.com/

# ===========================================
# Internal API Key (for service-to-service calls)
# ===========================================
INTERNAL_AUTH_API_KEY=your-internal-api-key

# ===========================================
# Application URLs
# ===========================================
SSQ_BASE_URL=http://localhost:8000
SSQ_CLIENT_URL=http://localhost:3000

# ===========================================
# Social Media Integration
# ===========================================
META_CLIENT_ID=your-meta-client-id
META_CLIENT_SECRET=your-meta-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# Server Configuration (for production)
# ===========================================
SERVER_PORT=8000
